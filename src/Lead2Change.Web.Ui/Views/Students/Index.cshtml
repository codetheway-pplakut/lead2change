@model List<Lead2Change.Domain.ViewModels.RegistrationViewModel>


<div>

    <table>
        <thead>
            <tr>
                <th scope="col">Last Name</th>
                <th scope="col">First Name</th>
                <th scope="col">Date Of Birth</th>
                <th scope="col">Email</th>
                <th scope="col">Parent Last Name</th>
                <th scope="col">Parent First Name</th>
                <th scope="col">Parent Email</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)

            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentLastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentFirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentDateOfBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ParentLastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ParentFirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ParentEmail)
                    </td>
                    <td>
                        <div>
                            <div>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                            </div>

                            <div>
                                @Html.ActionLink("Details", "Details", new { id = item.Id })
                            </div>

                            <div>
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </div>
                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>
    <div>
        <a asp-action="Create"><b>Add new student.</b></a>
    </div>
</div>
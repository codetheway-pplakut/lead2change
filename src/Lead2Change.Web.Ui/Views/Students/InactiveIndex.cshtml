@model List<Lead2Change.Domain.Models.Student>
@*
    ViewData["Title"] = "InactiveIndex";
*@
<div class="container-fluid">
    <div class="row blueHeader full-width mb-sm-3">
        <div class="col-sm-12">
            <h1 class="text-center"><strong>INACTIVE STUDENTS</strong></h1>
        </div>
    </div>
    <table class="table table-striped pt-2" id="myTable">
        <thead class="thead blueStyle">
            <tr>
                <th scope="col">Last Name</th>
                <th scope="col">First Name</th>
                <th scope="col">Date Of Birth</th>
                <th scope="col">Email</th>
                <th scope="col">Parent Last Name</th>
                <th scope="col">Parent First Name</th>
                <th scope="col">Parent Email</th>
                <th scope="col">Options</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentLastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentFirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentDateOfBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ParentLastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ParentFirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ParentEmail)
                    </td>
                    <td>
                        <div>

                            <div class="row">
                                <div class="col-sm-12">
                                    <input type="button" class="btn orangeBtn btn-block mb-sm-2" value="Edit" onclick="location.href='@Url.Action("Edit","Students", new { studentId = item.Id })'" />

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-12">
                                    <input type="button" class="btn orangeBtn btn-block mb-sm-2" value="Details" onclick="location.href='@Url.Action("Details","Students", new { studentId = item.Id })'" />

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-12">
                                    <input type="button" class="btn orangeBtn btn-block mb-sm-2" value="Delete" onclick="location.href='@Url.Action("Delete","Students", new { id = item.Id })'" />

                                </div>
                            </div>
                        </div>
                    </td>
                </tr>}
        </tbody>
    </table>
</div>
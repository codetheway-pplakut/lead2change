@model List<Lead2Change.Domain.Models.Student>
@*
    ViewData["Title"] = "InactiveIndex";
*@

<div class="container">
    <div class="row">
        <div class="col-sm-10"><h1 class="tableLinks">Inactive Students</h1></div>
        <div class="col-sm-2">
            <input type="text" id="myInput" onkeyup="searchFilter()" placeholder="Search for items.." class="tableInput" align="right">
        </div>
    </div>
    <table class="table" id="myTable">
        <thead>
            <tr>
                <th scope="col">Last Name</th>
                <th scope="col">First Name</th>
                <th scope="col">Date Of Birth</th>
                <th scope="col">Email</th>
                <th scope="col">Parent Last Name</th>
                <th scope="col">Parent First Name</th>
                <th scope="col">Parent Email</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentLastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentFirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentDateOfBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ParentLastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ParentFirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ParentEmail)
                    </td>
                    <td>
                        <div>
                            <div>
                                @Html.ActionLink("Edit", "Edit", new { studentId = item.Id })
                            </div>

                            <div>
                                @Html.ActionLink("Details", "Details", new { studentId = item.Id })
                            </div>

                            <div>
                                @Html.ActionLink("Goals", "Index", "Goals", new { studentID = item.Id })
                            </div>

                            <div>
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </div>
                            @if (item.CareerDeclarationId == Guid.Empty)
                            {
                                <div>
                                    @Html.ActionLink("Add Career", "Create", "CareerDeclaration", new { studentId = item.Id })
                                </div>
                            }
                            else
                            {
                                <div>
                                    @Html.ActionLink("View Career", "Details", "CareerDeclaration", new { studentId = item.Id })
                                </div>
                            }



                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>
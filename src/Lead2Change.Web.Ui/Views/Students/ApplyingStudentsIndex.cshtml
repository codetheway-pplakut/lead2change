@model List<Lead2Change.Domain.Models.Student>
@*
    ViewData["Title"] = "StudentsApplyingIndex";
*@
<div class="row orangeHeader full-width mb-sm-3">
    <div class="col-sm-12">
        <h1 class="text-center"><strong>APPLYING STUDENTS</strong></h1>
    </div>
</div>
<div class="container">

    <table class="table sortable" id="myTable">
        <thead>
            <tr>
                <th scope="col">Last Name</th>
                <th scope="col">First Name</th>
                <th scope="col">Date Of Birth</th>
                <th scope="col">Email</th>
                <th scope="col">Cell Phone</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentLastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentFirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentDateOfBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentCellPhone)
                    </td>
                    <td>
                        <div>
                            <div>
                                @Html.ActionLink("Edit", "Edit", new { studentId = item.Id })
                            </div>

                            <div>
                                @Html.ActionLink("Details", "Details", new { studentId = item.Id })
                            </div>
                            <div>
                                @Html.ActionLink("Accept Student", "AcceptStudent", new { studentId = item.Id })
                            </div>
                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>
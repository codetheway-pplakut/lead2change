@model Lead2Change.Domain.ViewModels.EditViewModel
@*
    ViewData["Title"] = "ParentInformationEdit";
*@
@{
}
<div class="container-fluid">
    <div align="center">
        <h1>Parent/Guardian Information</h1>
    </div>
</div>
<form>
    <div class="calibri">

        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="ParentFirstName" class="control-label">First Name:</label>
                    <input asp-for="ParentFirstName" class="form-control" value=@Model.ParentFirstName required />
                    <span asp-validation-for="ParentFirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="ParentLastName" class="control-label">Last Name:</label>
                    <input asp-for="ParentLastName" class="form-control" value=@Model.ParentLastName required />
                    <span asp-validation-for="ParentLastName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-11">
                <div class="form-group">
                    <label asp-for="Address" class="control-label">Address:</label>
                    <input asp-for="Address" class="form-control" value=@Model.Address required />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-1">
                <div class="form-group">
                    <label asp-for="ParentApartmentNumber" class="control-label">Apt. #:</label>
                    <input asp-for="ParentApartmentNumber" class="form-control" value=@Model.ParentApartmentNumber />
                    <span asp-validation-for="ParentApartmentNumber" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-8">
                <div class="form-group">
                    <label asp-for="ParentCity" class="control-label">City:</label>
                    <input asp-for="ParentCity" class="form-control" value=@Model.ParentCity required />
                    <span asp-validation-for="ParentCity" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    <label asp-for="ParentZipCode" class="control-label">Zip Code:</label>
                    <input asp-for="ParentZipCode" class="form-control" value=@Model.ParentZipCode required />
                    <span asp-validation-for="ParentZipCode" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    <label asp-for="ParentState" class="control-label">State:</label>
                    <select asp-for="ParentState" class="form-control" required>
                        <option value="Alabama">AL</option>
                        <option value="Alaska">AK</option>
                        <option value="rizona">AZ</option>
                        <option value="Arkansas">AR</option>
                        <option value="California">CA</option>
                        <option value="Colorado">CO</option>
                        <option value="Connecticut">CT</option>
                        <option value="Delaware">DE</option>
                        <option value="Florida">FL</option>
                        <option value="Georgia">GA</option>
                        <option value="Hawaii">HI</option>
                        <option value="Idaho">ID</option>
                        <option value="Illinois">IL</option>
                        <option value="Indiana">IN</option>
                        <option value="Iowa">IA</option>
                        <option value="Kansas">KS</option>
                        <option value="Kentucky">KY</option>
                        <option value="Louisiana">LA</option>
                        <option value="Maine">ME</option>
                        <option value="Maryland">MD</option>
                        <option value="Massachusetts">MA</option>
                        <option value="Michigan">MI</option>
                        <option value="Minnesota">MN</option>
                        <option value="Mississippi">MS</option>
                        <option value="Missouri">MO</option>
                        <option value="Montana">MT</option>
                        <option value="Nebraska">NE</option>
                        <option value="Nevada">NV</option>
                        <option value="New Hampshire">NH</option>
                        <option value="New Jersey">NJ</option>
                        <option value="New Mexico">NM</option>
                        <option value="New York">NY</option>
                        <option value="North Carolina">NC</option>
                        <option value="North Dakota">ND</option>
                        <option value="Ohio">OH</option>
                        <option value="Oklahoma">OK</option>
                        <option value="Oregon">OR</option>
                        <option value="Pennsylvania">PA</option>
                        <option value="Rhode Island">RI</option>
                        <option value="South Carolina">SC</option>
                        <option value="South Dakota">SD</option>
                        <option value="Tennessee">TN</option>
                        <option value="Texas">TX</option>
                        <option value="Utah">UT</option>
                        <option value="Vermont">VT</option>
                        <option value="Virginia">VA</option>
                        <option value="Washington">WA</option>
                        <option value="West Virginia">WV</option>
                        <option value="Wisconsin">WI</option>
                        <option value="Wyoming">WY</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ParentHomePhone" class="control-label">Home Phone:</label>
            <input asp-for="ParentHomePhone" class="form-control" value=@Model.ParentHomePhone required />
            <span asp-validation-for="ParentHomePhone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ParentCellPhone" class="control-label">Cell Phone:</label>
            <input asp-for="ParentCellPhone" class="form-control" value=@Model.ParentCellPhone required />
            <span asp-validation-for="ParentCellPhone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ParentEmail" class="control-label">Email:</label>
            <input asp-for="ParentEmail" class="form-control" value=@Model.ParentEmail type="email" required />
            <span asp-validation-for="ParentEmail" class="text-danger"></span>
        </div>
        <div class="form-group hidden" display="none">
            <label asp-for="CoachId" class="control-label"></label>
            <input asp-for="CoachId" class="form-control" value=@Model.CoachId />
        </div>
        <div class="form-group hidden" display="none">
            <label asp-for="Id" class="control-label"></label>
            <input asp-for="Id" class="form-control" value=@Model.Id />
        </div>
        <div class="form-group" align="center">
            <input type="submit" value="Submit" class="btn btn-submit" />
        </div>
    </div>
</form>

<div>
    <button class="btn btn-back">@Html.ActionLink("Back to Edit", "Edit", new { studentId = Model.Id })</button>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
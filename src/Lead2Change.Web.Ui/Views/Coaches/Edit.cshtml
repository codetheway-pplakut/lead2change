@model Lead2Change.Domain.ViewModels.CoachViewModel;
@*
    ViewData["Title"] = "Edit";
*@

<div container="fluid">
    <div class="row blueHeader full-width mb-sm-3">
        <div class="col-sm-12">
            <h1 class="text-center"><strong>EDIT COACH</strong></h1>
        </div>
    </div>

    <form asp-action="Update">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group, d-none" display="none">
            <label asp-for="Id" class="control-label"></label>
            <input asp-for="Id" class="form-control" value=@Model.Id />
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="CoachFirstName" class="control-label">First Name:</label></b>
                    <input asp-for="CoachFirstName" class="form-control" value=@Model.CoachFirstName required />
                    <span asp-validation-for="CoachFirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="CoachLastName" class="control-label">Last Name:</label></b>
                    <input asp-for="CoachLastName" class="form-control" value=@Model.CoachLastName required />
                    <span asp-validation-for="CoachLastName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <label asp-for="CoachEmail" class="control-label">Email:</label></b>
                    <input asp-for="CoachEmail" class="form-control" value=@Model.CoachEmail required />
                    <span asp-validation-for="CoachEmail" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <label asp-for="CoachPhoneNumber" class="control-label">Phone Number</label></b>
                    <input asp-for="CoachPhoneNumber" class="form-control" value=@Model.CoachPhoneNumber required />
                    <span asp-validation-for="CoachPhoneNumber" class="text-danger"></span>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <h4 align="center"><label asp-for="Active" class="control-label">Is this coach active? (Check if yes)</label></h4>
                    <input asp-for="Active" class="form-control" type="checkbox" />
                    <span asp-validation-for="Active" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-sm-6">
                    <input type="submit" value="Submit" class="btn btn-primary btn-lg" />
                </div>
                <div class="col-sm-6">
                    <button class="btn btn-outline-dark btn-lg float-right" type="button" onclick="location.href='@Url.Action("Index","Coaches")'">Back To List</button>
                </div>
            </div>
        </div>
    </form>
    <div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

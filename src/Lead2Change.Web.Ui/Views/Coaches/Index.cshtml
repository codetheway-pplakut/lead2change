@model List<Lead2Change.Domain.Models.Coach>
@*
    ViewData["Title"] = "Index";
*@
@{
}

<div class="container">
    <h1>Active Coaches</h1>

    <table class="table table-striped pt-2" id="myTable">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Options</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)

            {
                @if (item.Active)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modeItem => item.CoachLastName), @Html.DisplayFor(modelItem => item.CoachFirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CoachEmail)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CoachPhoneNumber)
                        </td>
                        <td>
                            <div>
                                <div>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                                </div>
                                <div>
                                    @Html.ActionLink("Assign Student", "AssignStudentIndex", new { id = item.Id })
                                </div>
                                <div>
                                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                                </div>
                                <div>
                                    @Html.ActionLink("View Coach's Students", "CoachesStudents", new { id = item.Id })
                                </div>
                                <div>
                                    @Html.ActionLink("Unactivate Coach", "InactiveCoach", new { coachId = item.Id })
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>


    <h1>Inactive Coaches</h1>

    <table class="table table-striped pt-2" id="myTable">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Options</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)

            {
                @if (item.Active == false)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modeItem => item.CoachLastName), @Html.DisplayFor(modelItem => item.CoachFirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CoachEmail)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CoachPhoneNumber)
                        </td>
                        <td>
                            <div>
                                <div>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                                </div>
                                <div>
                                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                                </div>
                                <div>
                                    @Html.ActionLink("View Coach's Students", "CoachesStudents", new { id = item.Id })
                                </div>
                                <div>
                                    @Html.ActionLink("Activate Coach", "ActiveCoach", new { coachid = item.Id })
                                </div>
                                <div>
                                    @Html.ActionLink("Delete", "Delete", new { Id = item.Id })
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <div>
        <a asp-area="Identity" asp-page="/Account/RegisterCoach"><b>Register Coach</b></a>
    </div>
</div>
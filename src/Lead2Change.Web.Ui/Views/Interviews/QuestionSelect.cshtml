@model Lead2Change.Domain.ViewModels.InterviewWithQuestionsViewModel
@using Lead2Change.Domain.Models;

@* ViewData["Title"] = "Question Select";
*@
<div class="container-fluid">
    <div class="row blueHeader full-width mb-sm-3">
        <div class="col-sm-12">
            <h1 class="text-center"><strong>SELECT A QUESTION TO ADD</strong></h1>
        </div>
    </div>
    <table class="table table-striped table-hover table-responsive-sm fixedTable mt-sm-3">
        <thead class="thead blueStyle">
            <tr>

                <th style="width:75%">
                    Question
                </th>
                <th style="width:25%">
                    Select
                </th>
            </tr>
        </thead>
        <tbody>
             <tr>
                <td>
            @if (Model.UnselectedQuestions != null)
            {
                @foreach (Question question in Model.UnselectedQuestions)
                {
                    @if (question.IsArchived == false)
                    {
                    <tr>
                        <td>@question.QuestionString</td>
                        <td>
                            <button class="btn btn-lg btn-block orangeBtn" onclick="location.href='@Url.Action("SelectQuestion", "Interviews", new { questionId = question.Id, interviewId = Model.Id })'">Add Question</button>
                        </td>
                    </tr>
                        }
                    }
                }
        </tbody>
    </table>
    <div class="row">
        <div class="col-sm-12">
            <button class="btn btn-outline-dark btn-lg" onclick="location.href='@Url.Action("Edit","Interviews", new { id = Model.Id })'">Back</button>
        </div>
    </div>
</div>

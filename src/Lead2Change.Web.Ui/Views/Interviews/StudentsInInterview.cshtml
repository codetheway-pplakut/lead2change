@model List<Lead2Change.Domain.ViewModels.StudentInterview>
@* ViewData["Title"] = "Question Select";
*@
<div class="container-fluid">

    <table class="table table-striped pt-2">
        <thead class="thead blueStyle">
            <tr>
                <th>
                    Student
                </th>
                <th>
                    Interview Form
                </th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                @for (int j = 0; j < item.Students.Count; j++)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.Students[j].StudentLastName), @Html.DisplayFor(modelItem => item.Students[j].StudentLastName)
                    </td>
                }
                <td>
                    <div class="row">
                        <div class="col-sm-12">
                            <input type="button" class="btn btn-block orangeBtn" value="Answer" onclick="location.href='@Url.Action("AnswerQuestion", "Answer", new { studentID = item.StudentAnswer.StudentId, interviewID = item.StudentAnswer.InterviewId})'" />

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <input type="button" class="btn btn-block orangeBtn" value="View Answers" onclick="location.href='@Url.Action("Index", "Answer", new { studentID = item.StudentAnswer.StudentId })'" />

                        </div>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>
@model Lead2Change.Domain.ViewModels.StudentInterviewViewModel
@* ViewData["Title"] = "Question Select";
*@

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">


<div class="container-fluid">
    <div class="row orangeHeader full-width mb-sm-3">
        <div class="col-sm-12">
            <h1 class="text-center"><strong>STUDENT INTERVIEW FOR @Model.StudentAnswer[0].InterviewName.ToUpper()</strong></h1>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3 searchbar ml-auto">
            <input type="text" id="myInput" onkeyup="searchFilter()" placeholder="Search for students.." class="tableInput searchbar__input" align="right">
            <button type="button" class="searchbar__button">
                <i class="material-icons">search</i>
            </button>
        </div>
    </div>
    <div class="col-sm-12">      
        <table class="table table-striped table-hover table-responsive-sm fixedTable mt-sm-3 mb-0 shadow-lg">          
            <thead class="thead blueStyle">
                <tr>
                    <th style="width: 75%">
                        Student
                    </th>
                    <th style="width: 25%">
                        Interview Form
                    </th>
                </tr>
                </thead>
            </table>
        <div class="tableScroll shadow-lg">
            <table class="table table-striped table-hover table-responsive-sm fixedTable mb-0" id="myTable">
                <thead class="blueStyle d-none">
                    <tr>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Students != null)
                    {
                        @for (int i = 0; i < Model.Students.Count; i++)
                        {
                            <tr>
                                <td style="width: 75%">
                                    @Html.DisplayFor(modelItem => Model.Students[i].StudentLastName), @Html.DisplayFor(modelItem => Model.Students[i].StudentFirstName)
                                </td>
                                <td style="width: 25%">
                                            <button class="btn orangeBtn btn-block" onclick="location.href = '@Url.Action("AnswerQuestion", "Answer", new {id=Model.StudentAnswer[i].InterviewId, studentID=Model.StudentAnswer[i].StudentId})'; this.disabled = true;">Interview</button>
                                    @if (Model.StudentAnswer[i].QuestionInInterviews.Count > 0)
                                    {
                                          
                                                    <button class="btn orangeBtn btn-block" onclick="location.href = '@Url.Action("Index", "Answer", new {interviewID=Model.StudentAnswer[i].InterviewId, studentId=Model.StudentAnswer[i].StudentId})'; this.disabled = true">View Answers</button>

                                            
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>  
    </div>
<br />
<div align="center">
    <button class="btn btn-outline-dark " onclick="location.href='@Url.Action("Index","Interviews")'">Back To List</button>
</div>
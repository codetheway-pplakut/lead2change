@model Lead2Change.Domain.ViewModels.InterviewViewModel;
@*
    ViewData["Title"] = "Edit";
*@
<form asp-action="Update" class="calibri">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group, d-none" display="none">
        <label asp-for="Id" class="control-label"></label>
        <input asp-for="Id" class="form-control" value=@Model.Id />
    </div>
    <div class="form-group">
        <b><label asp-for="InterviewName" class="control-label"></label></b>
        <input asp-for="InterviewName" class="form-control" value=@Model.InterviewName />
        <span asp-validation-for="InterviewName" class="text-danger"></span>
    </div>
   
    <br />
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-submit" />
    </div>
</form>
<div align="center">
    <button class="btn btn-outline-dark" onclick="location.href='@Url.Action("Index","Interviews")'">Back To List</button>
</div>
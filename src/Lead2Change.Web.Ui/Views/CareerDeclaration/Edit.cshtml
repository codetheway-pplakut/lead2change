@using Lead2Change.Web.Ui.Extensions
@model Lead2Change.Domain.ViewModels.CareerDeclarationViewModel;
@*
    ViewData["Title"] = "Edit";
*@
<h1>Edit</h1>
<form asp-action="Update">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group hidden" display="none">
        <label asp-for="Id" class="control-label"></label>
        <input asp-for="Id" class="form-control" value=@Model.Id />
    </div>
    <div class="form-group hidden">
        <label asp-for="StudentId" class="control-label"></label>
        <input asp-for="StudentId" class="form-control" value=@Model.StudentId />
        <span asp-validation-for="StudentId" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="CareerCluster" class="control-label col-md-3">Career Cluster</label>
        @Html.DropDownListFor(m => m.CareerCluster, Model.CareerCluster.ToSelectList(), null, new { @class = "form-control  col-md-9" })
        <span asp-validation-for="CareerCluster" class="text-danger"> </span>
    </div>
    <div class="form-group row">
        <label asp-for="SpecificCareer" class="control-label col-md-3">Specific Career</label>
        <input asp-for="SpecificCareer" class="form-control col-md-9" value=@Model.SpecificCareer>
        <span asp-validation-for="SpecificCareer" class="text-danger"> </span>
    </div>
    <div class="form-group row">
        <label asp-for="CollegeBound" class="control-label col-md-3">Student is College Bound</label>
        <input asp-for="CollegeBound" class="form-control col-md-9" />
        <span asp-validation-for="CollegeBound" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="TechnicalCollegeBound" class="control-label col-md-3">Student is Technical College Bound</label>
        <input asp-for="TechnicalCollegeBound" class="form-control col-md-9" >
        <span asp-validation-for="TechnicalCollegeBound" class="text-danger"> </span>
    </div>

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
    <div>
        @Html.ActionLink("Back to Career Details", "Details", "CareerDeclaration", new { id = Model.Id })
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
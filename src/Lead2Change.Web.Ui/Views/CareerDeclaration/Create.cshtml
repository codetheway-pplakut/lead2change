@using Lead2Change.Web.Ui.Extensions
@model Lead2Change.Domain.ViewModels.CareerDeclarationViewModel
@*
    ViewData["Title"] = "Create";
*@

<h1>Create</h1>
<form asp-action="Register">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Id" class="control-label"></label>
        <input asp-for="Id" class="form-control" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StudentId" class="control-label"></label>
        <input asp-for="StudentId" class="form-control" />
        <span asp-validation-for="StudentId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CollegeBound" class="control-label"></label>
        <input asp-for="CollegeBound" class="form-control" />
        <span asp-validation-for="CollegeBound" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CareerCluster" class="control-label"></label>
        @Html.DropDownListFor(m => m.CareerCluster, Model.CareerCluster.ToSelectList(), null, new { @class = "form-control" })
        <span asp-validation-for="CareerCluster" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SpecificCareer" class="control-label"></label>
        <input asp-for="SpecificCareer" class="form-control" />
        <span asp-validation-for="SpecificCareer" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TechnicalCollegeBound" class="control-label"></label>
        <input asp-for="TechnicalCollegeBound" class="form-control" />
        <span asp-validation-for="TechnicalCollegeBound" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    @Html.ActionLink("Back to List", "Index", "Students")
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


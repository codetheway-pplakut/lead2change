@using Lead2Change.Web.Ui.Extensions
@model Lead2Change.Domain.ViewModels.CareerDeclarationViewModel
@*
    ViewData["Title"] = "Create";
*@

<div class="container">

    <h1>Create</h1>

    <form asp-action="Register">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="CollegeBound" class="control-label col-md-3"></label>
            <div class="col-md-9">
                <input asp-for="CollegeBound" class="form-control" />
            </div>
            <span asp-validation-for="CollegeBound" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="CareerCluster" class="control-label col-md-3"></label>
            @Html.DropDownListFor(m => m.CareerCluster, Model.CareerCluster.ToSelectList(), null, new { @class = "form-control col-md-9" })
            <span asp-validation-for="CareerCluster" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="SpecificCareer" class="control-label col-md-3"></label>
            <input asp-for="SpecificCareer" class="form-control col-md-9" />
            <span asp-validation-for="SpecificCareer" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="TechnicalCollegeBound" class="control-label col-md-3"></label>
            <input asp-for="TechnicalCollegeBound" class="form-control col-md-9" />
            <span asp-validation-for="TechnicalCollegeBound" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <input type="submit" value="Create" class="btn btn-primary col-md-3" />
        </div>
    </form>
</div>

<div>
    @Html.ActionLink("Back to List", "Index", "Students")
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


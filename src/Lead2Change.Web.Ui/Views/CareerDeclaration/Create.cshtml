@using Lead2Change.Web.Ui.Extensions
@model Lead2Change.Domain.ViewModels.CareerDeclarationViewModel
@*
    ViewData["Title"] = "Create";
*@

<div class="container">

    <div class="row orangeHeader full-width mb-sm-3">
        <div class="col-sm-12">
            <h1 class="text-center"><strong>CAREER DECLARATION FORM</strong></h1>
            <h5 class="text-center">Create</h5>
        </div>
    </div>
    <form asp-action="Register">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group hidden">
            <label asp-for="StudentId" class="control-label"></label>
            <input asp-for="StudentId" class="form-control" value=@Model.StudentId />
            <span asp-validation-for="StudentId" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="CollegeBound" class="control-label col-md-3">Are you College Bound?</label>
            <div class="col-md-9">
                <input asp-for="CollegeBound" class="form-control" />
            </div>
            <span asp-validation-for="CollegeBound" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="CareerCluster" class="control-label col-md-3">If yes, what is the career cluster that you are most interested in?</label>
            @Html.DropDownListFor(m => m.CareerCluster, Model.CareerCluster.ToSelectList(), null, new { @class = "form-control col-md-9" })
            <span asp-validation-for="CareerCluster" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="SpecificCareer" class="control-label col-md-3">What specific career would you like to pursue?</label>
            <input asp-for="SpecificCareer" class="form-control col-md-9" />
            <span asp-validation-for="SpecificCareer" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="TechnicalCollegeBound" class="control-label col-md-3">Are you technical college bound?</label>
            <input asp-for="TechnicalCollegeBound" class="form-control col-md-9" />
            <span asp-validation-for="TechnicalCollegeBound" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-submit col-md-3" />
        </div>
    </form>
</div>

<div align="center">
    <button class="btn btn-back">@Html.ActionLink("Back to List", "Index", "Students")</button>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


@model Lead2Change.Domain.ViewModels.QuestionsViewModel;
@*
    ViewData["Title"] = "Edit";
*@
<div class="row orangeHeader full-width mb-sm-3">
    <div class="col-sm-12">
        <h1 class="text-center"><strong>EDIT QUESTION</strong></h1>
    </div>
</div>
<form asp-action="Update" class="calibri">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group, d-none" display="none">
        <label asp-for="Id" class="control-label"></label>
        <input asp-for="Id" class="form-control" value=@Model.Id />
    </div>
    <div class="form-group">
        <b><label asp-for="QuestionString" class="control-label">Edit the Question: </label></b>
        <input asp-for="QuestionString" class="form-control" value=@Model.QuestionString />
        <span asp-validation-for="QuestionString" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-submit" />
    </div>
</form>
<div align="center">
    <button class="btn btn-outline-dark" onclick="location.href='@Url.Action("Index","Questions")'">Back to List</button>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

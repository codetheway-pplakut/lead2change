@model Lead2Change.Domain.ViewModels.QuestionsViewModel
@* ViewData["Title"] = "Create";
*@
<div class="row blueHeader full-width mb-sm-3">
    <div class="col-sm-12">
        <h1 class="text-center"><strong>CREATE QUESTION</strong></h1>
    </div>
</div>
<form asp-action="Register" class="calibri">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group d-none">
        <input asp-for="Id" class="form-control" />
    </div>
    <div class="form-group">
        <b><label asp-for="QuestionString" class="control-label">Add a Question:</label></b>
        <input required asp-for="QuestionString" class="form-control" />
        <span asp-validation-for="QuestionString" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-6">
                <input type="submit" value="Create" class="btn btn-submit" onclick="var e = this; setTimeout(function () { e.disabled = true;},0);return true;" />
                <input type="submit" name="RedirectCreateView" value="Create and New" class="btn btn-submit" onclick="var e = this; setTimeout(function () { e.disabled = true;},0);return true;"  />
            </div>
            <div class="col-sm-3"></div>
            <div class="col-sm-3 text-center">
                <button class="btn btn-outline-dark btn-md btn-block" onclick="location.href='@Url.Action("Index","Questions")'">Back to List</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


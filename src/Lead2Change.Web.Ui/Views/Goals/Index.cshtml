@model Lead2Change.Domain.ViewModels.GoalsAndIDViewModel
@*
    ViewData["Title"] = "Index";
*@
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <h2>Your Goals</h2>
        </div>
    </div>
    <table class="table table-striped pt-2">
        <thead class="thead-dark">
            <tr>
                <th>
                    Goal
                </th>
                <th>
                    Date Set
                </th>
                <th>
                    Progress
                </th>
                <th>
                    Options
                </th>
            </tr>
        </thead>

        @foreach (var item in Model.GoalModels)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GoalSet)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateGoalSet)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WasItAccomplished)
                </td>
                <td>
                    <div class="row">
                        <div class="col-sm-12">
                            <input type="button" class="btn btn-info btn-block mb-sm-2" value="Edit" onclick="location.href='@Url.Action("Edit","Goals", new { id = item.Id, studentID = item.StudentId })'" />

                        </div>
                    </div>
                    <div class="row">
                        <div class=" col-sm-12">
                            <input type="button" class="btn btn-info btn-block mb-sm-2" value="Details" onclick="location.href='@Url.Action("Details","Goals", new { id = item.Id, studentID = item.StudentId })'" />

                        </div>

                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <input type="button" class="btn btn-info btn-block" value="Delete" onclick="location.href='@Url.Action("Delete","Goals", new { id = item.Id, studentID = item.StudentId })'" />

                        </div>
                    </div>
                </td>
            </tr>
        }

    </table>

    <div class="row">
        <div class="col-sm-12">
            <input type="button" class="btn btn-primary" value="Create a Student" onclick="location.href='@Url.Action("Create","Goals", new {studentID = Model.StudentID })'" />


        </div>
    </div>
</div>
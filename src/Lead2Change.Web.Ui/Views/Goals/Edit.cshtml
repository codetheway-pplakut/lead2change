@model Lead2Change.Domain.ViewModels.GoalViewModel;
@*
    ViewData["Title"] = "Edit";
*@
<h1>Edit</h1>
<form asp-action="Update">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group, d-none" display="none">
        <label asp-for="Id" class="control-label"></label>
        <input asp-for="Id" class="form-control" value=@Model.Id />
    </div>
    <div id="hidden" class="form-group, d-none" display="none">
        <label asp-for="StudentId" class="control-label"></label>
        <input asp-for="StudentId" class="form-control" value=@Model.StudentId />
    </div>
    <div class="form-group">
        <label asp-for="GoalSet" class="control-label"></label>
        <input asp-for="GoalSet" class="form-control" value=@Model.GoalSet />
        <span asp-validation-for="GoalSet" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateGoalSet" class="control-label"></label>
        <input asp-for="DateGoalSet" class="form-control" data-date-format="MM-dd-yyyy" type="date" placeholder="MM-dd-yyyy" />
        <span asp-validation-for="DateGoalSet" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SEL" class="control-label"></label>
        <div class="list-group">
            <label class="list-group-item">
                <input class="form-check-input me-1" name="SEL" type="checkbox" value="Self-Awareness" /> Self Awareness
            </label>
            <label class="list-group-item">
                <input class="form-check-input me-1" name="SEL" type="checkbox" value="Self-Management" /> Self-Management
            </label>
            <label class="list-group-item">
                <input class="form-check-input me-1" name="SEL" type="checkbox" value="Social-Awareness" /> Social Awareness
            </label>
            <label class="list-group-item">
                <input class="form-check-input me-1" name="SEL" type="checkbox" value="Relationship-Skills" /> Relationship Skills
            </label>
            <label class="list-group-item">
                <input class="form-check-input me-1" name="SEL" type="checkbox" value="Responsible Decision-Making" /> Responsible Decision Making
            </label>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="GoalReviewDate" class="control-label"></label>
        <input asp-for="GoalReviewDate" class="form-control" data-date-format="MM-dd-yyyy" type="date" placeholder="MM-dd-yyyy" />
        <span asp-validation-for="GoalReviewDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="WasItAccomplished" class="control-label"></label>
        <select asp-for="WasItAccomplished" class="form-control">
            <option selected>Select A Choice</option>
            <option value="No">No</option>
            <option value="In Progress">In Progress</option>
            <option value="Yes!">Yes!</option>
        </select>
    </div>
    <div class="form-group, shipping">
        <label asp-for="Explanation" class="control-label"></label>
        <textarea asp-for="Explanation" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
        <span asp-validation-for="Explanation" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary"/>
    </div>
</form>
<div align="center">
    <a asp-action="Index" asp-route-studentID=@Model.StudentId>Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

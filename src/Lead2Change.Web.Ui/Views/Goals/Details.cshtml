@model Lead2Change.Domain.ViewModels.GoalViewModel
@*
    ViewData["Title"] = "Details";
*@
<div class="row orangeHeader full-width mb-sm-3">
    <div class="col-sm-12">
        <h1 class="text-center"><strong>GOAL DETAILS</strong></h1>
    </div>
</div>
<style>
    tr:nth-child(1) {
        background: #2656A5;
        color: white;
    }   
</style>
<table class="table table-striped table-hover  shadow-lg">
    <thead>
        <tr>
            <th scope="col">Info Type</th>
            <th scope="col">Info</th>
        </tr>
    </thead>
    <tbody>
        <tr class="d-none">
            <td><b>StudentId:</b> </td>
            <td>@Model.StudentId</td>
        </tr>
        <tr>
            <td><b>Goal:</b> </td>
            <td>@Model.GoalSet</td>
        </tr>
        <tr>
            <td><b>Goal Set Date:</b> </td>
            <td>@Model.DateGoalSet.ToShortDateString()</td>
        </tr>
        <tr>
            <td><b>SEL:</b> </td>
            <td>@Model.SELDisplay</td>
        </tr>
        <tr>
            <td><b>Goal Review Date: </b></td>
            <td>@Model.GoalReviewDate.ToShortDateString()</td>
        </tr>
        <tr>
            <td><b>Accomplishment State: </b></td>
            <td>@Model.WasItAccomplished</td>
        </tr>
        <tr>
            <td><b>Explanation: </b></td>
            <td>@Model.Explanation</td>
        </tr>
    </tbody>
</table>
<div>
    <input type="button" class="btn btn-outline-dark " value="Back to Goals" onclick="location.href='@Url.Action("Index", "Goals", new { studentId = @Model.StudentId })'" />
</div>